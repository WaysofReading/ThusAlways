define day2_morning_gavin_seen = False
define day2_morning_lance_seen = False
define day2_morning_morgan_seen = False

label day2_morning:

    label day2_morning_hero_choice:
        menu:
            'hero 1':
                call gavin_path
                $ day2_morning_gavin_seen = True
            'hero 2':
                call lance_path
                $ day2_morning_lance_seen = True
            'hero 3':
                call morgan_path
                $ day2_morning_morgan_seen = True

        if not all([day2_morning_gavin_seen, day2_morning_lance_seen, day2_morning_morgan_seen]):
            jump day2_morning_hero_choice

    return

